<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tarea6.Vista.ContainerViews.ClimaPage"
             BackgroundColor="#150064"
             Title="ClimaPage">
    <VerticalStackLayout Padding="90"
                         Spacing="30">
        <Label Text="Clima en RD"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="White" />
        <Label x:Name="DateLabel"
               FontSize="18"
               TextColor="White"
               HorizontalOptions="Center" />
        <Image x:Name="WeatherIcon"
               Source="clima.png"
               WidthRequest="150"
               HeightRequest="150"
               HorizontalOptions="Center" />
        <Label x:Name="TemperatureLabel"
               FontSize="30"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="White" />
        <Label x:Name="DescriptionLabel"
               FontSize="40"
               HorizontalOptions="Center"
               TextColor="White" />
        <Button Text="Actualizar"
                FontSize="18"
                BackgroundColor="#00e8ff"
                TextColor="#150064"
                Clicked="OnGetWeatherClicked" />
    </VerticalStackLayout>
</ContentPage>